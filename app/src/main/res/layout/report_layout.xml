<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:adnroid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/image_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/report_layout_textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今日计划已完成！"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:textSize="40sp"
            android:lineSpacingExtra="20dp"
            />

        <TextView
            android:id="@+id/report_layout_textview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="日期"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/report_layout_textview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今日已背单词"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="@null"
            />

        <TextView
            android:id="@+id/report_layout_textview4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今日复习单词"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="@null"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/report_layout_textview5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/report_layout_textview6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/report_layout_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</LinearLayout>